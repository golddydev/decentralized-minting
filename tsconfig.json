{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "baseUrl": "./src",
    "rootDir": ".",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "./tests/**/*", "./scripts/**/*"],
  "exclude": ["./node_modules", "./lib"]
}
